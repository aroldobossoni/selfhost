# Proxmox API Configuration
pm_api_url          = "https://192.168.3.2:8006/api2/json"
# Token inicial: criar manualmente no Proxmox UI uma vez, depois o sistema auto-gerencia
# Para primeira execução, use variáveis de ambiente:
#   export TF_VAR_pm_api_token_id="root@pam!bootstrap"
#   export TF_VAR_pm_api_token_secret="your-bootstrap-secret"
pm_api_token_id     = "root@pam!terraform"
pm_api_token_secret = ""
pm_tls_insecure     = true
pm_node             = "proxmox"
pm_host             = "192.168.3.2"

# SSH Users
proxmox_ssh_user = "root"
docker_ssh_user  = "root"

# Proxmox Token Management (auto-gerenciado após Infisical estar pronto)
proxmox_pve_user   = "root@pam"  # Usuário PVE para criar tokens
proxmox_token_name = "terraform"  # Nome do token auto-gerenciado

# Docker LXC Container Configuration
# docker_password is auto-generated by Terraform (16 chars, no special chars)
docker_hostname         = "docker-lxc"
docker_ostemplate       = "local:vztmpl/alpine-3.22-default_20250617_amd64.tar.xz"
docker_ostemplate_name  = "alpine-3.22-default_20250617_amd64.tar.xz"
docker_template_storage = "local"
docker_cores            = 2
docker_memory           = 2048
docker_swap             = 512
docker_rootfs_storage   = "local-zfs"
docker_rootfs_size      = "16G"
docker_network_bridge   = "vmbr0"
docker_network_ip       = "dhcp"
docker_install_compose  = true
docker_start_on_boot    = true

# Docker Host IP (optional - automatically obtained from Proxmox API when using DHCP)
# docker_host_ip = ""

# Infisical Configuration
# Passwords are automatically generated - no need to set them manually
infisical_admin_email  = "admin@selfhost.local"
infisical_org_name     = "Selfhost"
infisical_project_name = "selfhost"
infisical_port         = 8080
# infisical_token is auto-generated by bootstrap and saved to infisical_token.auto.tfvars

